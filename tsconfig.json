{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "module": "es6",
    "target": "es2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "es6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

